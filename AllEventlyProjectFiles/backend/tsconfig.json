{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./api",                               // Set this to the source directory,
    "outDir": "./dist",                               // Set this to the output directory
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./api/**/*.ts"      // May need adjustment to include all source files
  ],
  "exclude": [
    "node_modules"
  ]
}
